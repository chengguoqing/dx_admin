<% include public/top %>



    <div class="pt5 pl20">
        <p class="fz18 pt10 pm10 bbm mt30">
            <%=title%>
        </p>


        <div class="mt40 ">
            <div class="row">
                <div class="col-xs-2 tr dsf_d_serxc">
                    封面：
                </div>
                <div class="col-xs-10 ">
                    <div class="fenmh_sdfx dsf_s_sderrt <%=data.fm?'act':''%>">
                        <div class="d_d_xddf_er">
                            <div class="progress ">
                                <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"> </div>
                            </div>
                        </div> <img src="/img/copy.png" class="morensd"> <img src="<%=data.fm%>" class="ab"> <img src="/img/close-circled.png" class="close_icons aa">
                    </div>
                </div>


            </div>


            <div class="row mt20">
                <div class="col-xs-2 tr dsf_d_serxc">
                    banner：
                </div>
                <div class="col-xs-10">
                    <% data.banner.forEach(function(banner){ %>
                        <div class="fenmh_sdfx ab sd_xddf_xdfgfgx act">
                            <div class="d_d_xddf_er">
                                <div class="progress ">
                                    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"> </div>
                                </div>
                            </div> <img src="/img/copy.png" class="morensd"> <img src="<%=banner%>" class="ab"> <img src="/img/close-circled.png" class="close_icons ac"> </div>
                        <% }) %>


                            <div class="fenmh_sdfx ab sd_xddf_xdfgfgx ">
                                <div class="d_d_xddf_er">
                                    <div class="progress ">
                                        <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"> </div>
                                    </div>
                                </div> <img src="/img/copy.png" class="morensd"> <img src="" class="ab"> <img src="/img/close-circled.png" class="close_icons ac"> </div>


                </div>
            </div>



            <div class="row  ">
                <div class="col-xs-2 tr sjh_ser">
                    标题：
                </div>
                <div class="col-xs-10 pr100">
                    <input type="text" class="form-control input-lg" placeholder="请输入标题" id="title" value="<%=data.title%>">

                </div>
            </div>

            <div class="row mt20 ">
                <div class="col-xs-2 tr sjh_ser">
                    价格：
                </div>
                <div class="col-xs-10 pr100">
                    <input type="text" class="form-control input-lg" placeholder="请输入价格" id="jiner" value="<%=data.jiner%>">

                </div>
            </div>

            <div class="row mt20 ">
                <div class="col-xs-2 tr sjh_ser">
                    详情：
                </div>
                <div class="col-xs-10 pr100">
                    <div contenteditable="true" class="dsf_iyu_sdrrx" id="xiangq">

                    </div>

                </div>
            </div>


            <div class="row mt20">
                <div class="col-xs-2 tr sjh_ser">
                    &nbsp;
                </div>
                <div class="col-xs-10 dsf_d_sdrtx">
                    <button type="button" class="btn btn-primary btn-lg df_ds_sertxc">确定</button>
                    <button type="button" class="btn btn-default btn-lg ml20">取消</button>
                </div>
            </div>


        </div>


        <div id="dsf_d_srrt"></div>
    </div>


    <% include public/bootm %>
        <script>
            var banner = ""
            $(".ad_xsdffxsd_xd li").eq(5).addClass("act")


            $(".dsf_iyu_sdrrx").html('<%=data.xq%>')
            var sd_xds = ""
            /*图片上传*/
            upimg('#dsf_d_srrt', '/upimg', function(a, b) {
                $(".d_d_xddf_er").addClass("show")
                $(sd_xds).find(".progress-bar-info").css({
                    width: b + "%"
                })
            }, function(file, data) {
                $(".d_d_xddf_er").removeClass("show")
                $(sd_xds).addClass("act").find("img.ab").attr("src", data.path)
                if ($(sd_xds).hasClass("sd_xddf_xdfgfgx")) {
                    $(sd_xds).after('<div class="fenmh_sdfx ab sd_xddf_xdfgfgx "> <div class="d_d_xddf_er"> <div class="progress "> <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"> </div> </div> </div> <img src="/img/copy.png" class="morensd"> <img src="" class="ab"> <img src="/img/close-circled.png" class="close_icons ac"> </div>')
                }
            })

            $("body").on("click", ".close_icons.aa", function(e) {
                e.stopPropagation()
                $(this).parents(".dsf_s_sderrt").removeClass("act")
            })

            $("body").on("click", ".close_icons.ac", function(e) {
                e.stopPropagation()
                $(this).parents(".sd_xddf_xdfgfgx").remove()
            })

            /*banner*/
            $("body").on("click", ".sd_xddf_xdfgfgx", function() {
                sd_xds = $(this)
                if (!$(this).hasClass("act")) {
                    $("#dsf_d_srrt").find(".webuploader-element-invisible").click()
                }

            })
            $("body").on("click", ".dsf_s_sderrt", function() {
                sd_xds = $(this)
                $("#dsf_d_srrt").find(".webuploader-element-invisible").click()
            })

            //            提交按钮触发
            $(".df_ds_sertxc").on("click", function() {
                var sd_dsr = {},
                    fm_sdf = $(".dsf_s_sderrt img.ab").attr("src"),
                    s_sdrfrs = [],
                    title = $("#title").val(),
                    jiner = $("#jiner").val()
                $(".sd_xddf_xdfgfgx").map(function(a) {
                    var fms_s = $(this).find("img.ab").attr("src")
                    if (fms_s) {
                        s_sdrfrs.push(fms_s)
                    }
                })
                if (!fm_sdf) {
                    alert("请上传封面!")
                    return
                }
                if (s_sdrfrs.length <= 0) {
                    alert("请上传banner!")
                    return
                }
                if (!title) {
                    alert("请输入标题")
                    return
                }
                if (!jiner) {
                    alert("请输入金额")
                    return
                }
                sd_dsr.id = <%=id%>
                sd_dsr.fm = fm_sdf
                sd_dsr.banner = s_sdrfrs
                sd_dsr.title = title
                sd_dsr.jiner = jiner
                sd_dsr.xq = $("#xiangq").html().trim()



                ajax("/bjcase", sd_dsr, function(data) {
                    alert(data.msg)
                    window.location.href = "fabulist"
                }, "post")

            })

        </script>
        </body>

        </html>
